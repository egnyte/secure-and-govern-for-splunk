{
    "meta": {
        "name": "TA-egnyte-protect",
        "displayName": "Egnyte Secure & Govern",
        "version": "1.0.7",
        "apiVersion": "3.0.0",
        "restRoot": "TA_egnyte_protect"
    },
    "pages": {
        "configuration": {
            "title": "Configuration",
            "description": "Set up your add-on",
            "tabs": [
                {
                    "name": "account",
                    "title": "Account",
                    "table": {
                        "header": [
                            {
                                "field": "name",
                                "label": "Account name"
                            },
                            {
                                "field": "client_id",
                                "label": "Client ID"
                            }
                        ],
                        "actions": [
                            "edit",
                            "delete",
                            "clone"
                        ]
                    },
                    "hook":{
                        "src": "egnyte_protect_account_hook",
                        "type": "external"
                    },
                    "entity": [
                        {
                            "field": "name",
                            "label": "Account name",
                            "type": "text",
                            "required": true,
                            "help": "Enter a unique name for this account.",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 50,
                                    "errorMsg": "Length of Account name should be between 1 and 50"
                                },
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Account name must start with a letter and followed by alphabetic letters, digits or underscores."
                                }
                            ]
                        },
                        {
                            "field": "endpoint",
                            "label": "Region",
                            "help": "Select Region",
                            "required": true,
                            "type": "singleSelect",
                            "defaultValue": "US",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "US",
                                        "label": "US"
                                    },
                                    {
                                        "value": "Europe",
                                        "label": "Europe"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "client_id",
                            "label": "Client ID",
                            "type": "text",
                            "required": true,
                            "help": "Enter the ClientID for this account.",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 200,
                                    "errorMsg": "Length of username should be between 1 and 200"
                                }
                            ]
                        },
                        {
                            "field": "client_secret",
                            "label": "Client Secret",
                            "type": "text",
                            "encrypted": true,
                            "required": true,
                            "help": "Enter Client Secret here.",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 8192,
                                    "errorMsg": "Length of password should be between 1 and 8192"
                                }
                            ]
                        },
                        {
                            "field": "password",
                            "label": "Authorization Code",
                            "type": "text",
                            "encrypted": true,
                            "required": true,
                            "help": "Generate a new code and paste here to authorize saving this form. (see link above)",
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 8192,
                                    "errorMsg": "Length of password should be between 1 and 8192"
                                }
                            ]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "blackList": "^_.*$",
                                "createSearchChoice": true
                            },
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 80,
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "logging",
                    "title": "Logging",
                    "entity": [
                        {
                            "field": "loglevel",
                            "label": "Log level",
                            "type": "singleSelect",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG",
                                        "value": "DEBUG"
                                    },
                                    {
                                        "label": "INFO",
                                        "value": "INFO"
                                    },
                                    {
                                        "label": "WARNING",
                                        "value": "WARNING"
                                    },
                                    {
                                        "label": "ERROR",
                                        "value": "ERROR"
                                    },
                                    {
                                        "label": "CRITICAL",
                                        "value": "CRITICAL"
                                    }
                                ]
                            },
                            "defaultValue": "INFO"
                        }
                    ]
                }
            ]
        },
        "inputs": {
            "title": "Inputs",
            "description": "Manage your data inputs",
            "table": {
                "header": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    }
                ],
                "moreInfo": [
                    {
                        "field": "name",
                        "label": "Name"
                    },
                    {
                        "field": "interval",
                        "label": "Interval"
                    },
                    {
                        "field": "index",
                        "label": "Index"
                    },
                    {
                        "field": "disabled",
                        "label": "Status"
                    },
                    {
                        "field": "endpoint",
                        "label": "Region"
                    },
                    {
                        "field": "format", 
                        "label": "Full Issue Details"
                    },
                    {
                        "field": "global_account",
                        "label": "Global Account"
                    }
                ],
                "actions": [
                    "edit",
                    "enable",
                    "delete",
                    "clone"
                ]
            },
            "services": [
                {
                    "name": "egnyte",
                    "title": "Egnyte Secure & Govern",
                    "entity": [
                        {
                            "field": "name",
                            "label": "Name",
                            "type": "text",
                            "help": "Enter a unique name for the data input",
                            "required": true,
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^[a-zA-Z]\\w*$",
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores."
                                },
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 100,
                                    "errorMsg": "Length of input name should be between 1 and 100"
                                }
                            ]
                        },
                        {
                            "help": "When checked, the input will more details for issues.", 
                            "type": "checkbox", 
                            "required": false, 
                            "field": "format", 
                            "label": "Full Issue Details"
                        },
                        {
                            "field": "interval",
                            "label": "Interval",
                            "type": "text",
                            "required": true,
                            "help": "Time interval of input in seconds.",
                            "validators": [
                                {
                                    "type": "regex",
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$",
                                    "errorMsg": "Interval must be an integer."
                                }
                            ]
                        },
                        {
                            "field": "index",
                            "label": "Index",
                            "type": "singleSelect",
                            "defaultValue": "default",
                            "options": {
                                "endpointUrl": "data/indexes",
                                "blackList": "^_.*$",
                                "createSearchChoice": true
                            },
                            "required": true,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 1,
                                    "maxLength": 80,
                                    "errorMsg": "Length of index name should be between 1 and 80."
                                }
                            ]
                        },
                        {
                            "field": "endpoint",
                            "label": "Region",
                            "help": "Select Region",
                            "required": true,
                            "type": "singleSelect",
                            "defaultValue": "US",
                            "options": {
                                "disableSearch": true,
                                "autoCompleteFields": [
                                    {
                                        "value": "US",
                                        "label": "US"
                                    },
                                    {
                                        "value": "Europe",
                                        "label": "Europe"
                                    }
                                ]
                            }
                        },
                        {
                            "field": "global_account",
                            "label": "Global Account",
                            "help": "",
                            "required": true,
                            "type": "singleSelect",
                            "options": {
                                "referenceName": "account"
                            }
                        }
                    ]
                }
            ]
        }
    }
}