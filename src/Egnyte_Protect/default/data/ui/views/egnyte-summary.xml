<form>
  <label>Incidents Summary</label>
  <init>
    <set token="severitytkn"></set>
    <set token="typetkn"></set>
    <set token="srctkn"></set>
  </init>
  <search id="baseSearch">
    <query>`egnyte_get_index` | fields detected,id,polcies,severity,source,status,egnyte_type,updated,severity_id</query>
    <earliest>$field1.earliest$</earliest>
    <latest>$field1.latest$</latest>
  </search>
  <fieldset submitButton="false">
    <input type="time" token="field1">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>Total Issues</title>
        <search base="baseSearch">
          <query>| stats dc(id) as Count</query>
        </search>
        <option name="drilldown">all</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <link target="_blank">/app/Egnyte_Protect/egnyte-incident_detail?earliest=$earliest$&amp;latest=$latest$</link>
        </drilldown>
      </single>
    </panel>
    <panel>
      <single>
        <title>High Severity</title>
        <search base="baseSearch">
          <query>| where severity="High" | stats dc(id) as Count</query>
        </search>
        <option name="colorMode">none</option>
        <option name="drilldown">all</option>
        <option name="rangeColors">["0x53a051","0xFF6566"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="useColors">1</option>
        <drilldown>
          <link target="_blank">/app/Egnyte_Protect/egnyte-incident_detail?form.severity_tkn=%22High%22&amp;earliest=$earliest$&amp;latest=$latest$</link>
        </drilldown>
      </single>
    </panel>
    <panel>
      <single>
        <title>Medium Severity</title>
        <search base="baseSearch">
          <query>| where severity="Medium" AND severity_id &lt; 7 | stats dc(id) as Count</query>
        </search>
        <option name="drilldown">all</option>
        <option name="rangeColors">["0x53a051","0xFEC946"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="useColors">1</option>
        <drilldown>
          <link target="_blank">/app/Egnyte_Protect/egnyte-incident_detail?form.severity_tkn=%22Medium%22&amp;earliest=$earliest$&amp;latest=$latest$</link>
        </drilldown>
      </single>
    </panel>
    <panel>
      <single>
        <title>Low Severity</title>
        <search base="baseSearch">
          <query>| where severity="Low" | stats dc(id) as Count</query>
        </search>
        <option name="drilldown">all</option>
        <option name="rangeColors">["0x53a051","0xB7C7DE"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="useColors">1</option>
        <drilldown>
          <link target="_blank">/app/Egnyte_Protect/egnyte-incident_detail?form.severity_tkn=%22Low%22&amp;earliest=$earliest$&amp;latest=$latest$</link>
        </drilldown>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <title>Incidents Reported over Time</title>
      <chart>
        <search base="baseSearch">
          <query>| search status=OPEN | timechart count by severity</query>
        </search>
        <option name="charting.chart">area</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="charting.fieldColors">{"High":0xFF6566,"Medium":0xFEC946,"Low":0xB7C7DE}</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Open Issues By Severity</title>
      <chart>
        <search base="baseSearch">
          <query>|search status=OPEN | stats dc(id) as count by severity</query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <set token="severitytkn">severity="$click.value$"</set>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <title>Open Issues by Type</title>
      <chart>
        <search base="baseSearch">
          <query>| search status=OPEN | search $severitytkn$ | search $srctkn$ | eval egnyte_type = replace(egnyte_type,"_"," ") | stats dc(id) as count by egnyte_type</query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <set token="typetkn">egnyte_type=$click.value$</set>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <title>Open Issues by Source</title>
      <chart>
        <search base="baseSearch">
          <query>| search status=OPEN | search $severitytkn$ | search $typetkn$ | stats dc(id) as count by source</query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <set token="srctkn">source="$click.value$"</set>
        </drilldown>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Incidents Summary</title>
      <table>
        <search base="baseSearch">
          <query>| search status=OPEN | eval Detected=strftime(detected/1000,"%Y-%m-%d %H:%M:%S")| search $severitytkn$ | search $typetkn$ | search $srctkn$ | table id,policies{},source,egnyte_type,status,severity,Detected | rename id as "Incident ID" policies{} as "Policies" source as "Source" egnyte_type as "Type" status as "Status" Detected as "Detection Time"</query>
        </search>
        <option name="drilldown">cell</option>
        <option name="refresh.display">progressbar</option>
        <format type="color" field="type">
          <colorPalette type="map">{"High":0xFF6566,"Medium":0xFEC946,"Low":0xB7C7DE}</colorPalette>
        </format>
      </table>
    </panel>
  </row>
</form>